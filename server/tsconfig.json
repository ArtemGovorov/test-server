{
	"version": "2.5.2",
	"compilerOptions": {
		"target": "es2015",
		"allowSyntheticDefaultImports": true,
		"preserveConstEnums": true,
		"sourceMap": true,
		"moduleResolution": "node",
		"lib": [
			"es2015",
			"es2016",
			"es2017"
    ],
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": false,
    "noImplicitAny": false,
    "noImplicitReturns": false,
    "removeComments": true,
		"noUnusedLocals": true,
    "strictNullChecks": true,
    "types": ["node", "mocha"]
	},
	"include": [ 
		"src/**/*"
  ],
	"compileOnSave": false
}